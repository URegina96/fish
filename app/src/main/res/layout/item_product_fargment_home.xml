<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_product_fargment_home"
    android:padding="8dp"
    android:layout_margin="7dp"
    android:orientation="vertical"
    android:background="#87CEEB">

    <ImageView
        android:id="@+id/imageView_item_product_Fragment_home"
        android:layout_width="180dp"
        android:layout_height="164dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textViewName_Fragment_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/textViewPrice_Fragment_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonAddToBasket_Fragment_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить в корзину"
        android:background="#4682B4"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="8dp"/>

</LinearLayout>
